---
const { text, done, subtext } = Astro.props;
---

<div class="mb-2 flex items-center">
	<input
		disabled={done}
		type="checkbox"
		checked={done}
		class="dark:ring-offset-gray-800 pointer-events-none h-4 w-4 rounded border-gray-300 bg-gray-100 text-blue-600 focus:ring-2 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:focus:ring-blue-600"
	/>
	<label for="disabled-checkbox" class="ml-2 text-sm font-medium text-gray-500 dark:text-gray-500">
		{text}
		{subtext && <span class="ml-2 font-medium italic text-gray-400">{subtext}</span>}
	</label>
</div>
