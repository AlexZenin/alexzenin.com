---
const { text, done, subtext } = Astro.props
---

<div class="flex items-center mb-2">
  <input
    disabled={done}
    type="checkbox"
    checked={done}
    class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600 pointer-events-none"
  />
  <label for="disabled-checkbox" class="ml-2 text-sm font-medium text-gray-500 dark:text-gray-500">
    {text}
    <span class="font-medium text-gray-400">{subtext}</span>
  </label>
</div>
