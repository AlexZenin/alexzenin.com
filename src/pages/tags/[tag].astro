---
import BlogPost from '../../components/BlogPost.astro'
import BaseLayout from '../../layouts/BaseLayout.astro'

// Returns an array of page routes
// Everything needed to construct the page routes is written inside this function
export async function getStaticPaths() {
  const allPosts = await Astro.glob('../posts/*.md')

  const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())]

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.frontmatter.tags.includes(tag))
    // Returns:
    // - params (what to call each page route)
    // - and optionally any props (data that you want passed to those pages)
    return {
      params: { tag },
      props: { posts: filteredPosts },
    }
  })
}

const { tag } = Astro.params
const { posts } = Astro.props
---

<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {posts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayout>
